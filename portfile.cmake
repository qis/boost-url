vcpkg_from_github(
  OUT_SOURCE_PATH SOURCE_PATH
  REPO CPPAlliance/url
  REF a56ae0df6d3078319755fbaa67822b4fa7fd352b
  SHA512 1f59c16998949f756789b1008d98c93407cb84703b8593fb67a12031a4a298c714168c481b91467b389d3b04e56279aabe7faaf0301733fd48154f35cb410f15
  HEAD_REF develop
)

set(BOOST_URL_STANDALONE ON)
if(boost IN_LIST FEATURES)
  set(BOOST_URL_STANDALONE OFF)
endif()

vcpkg_configure_cmake(
  SOURCE_PATH ${SOURCE_PATH}
  PREFER_NINJA
  OPTIONS
    -DBOOST_URL_STANDALONE=${BOOST_URL_STANDALONE}
    -DBOOST_URL_BUILD_TESTS=OFF
    -DBOOST_URL_BUILD_EXAMPLES=OFF
)

vcpkg_install_cmake()
vcpkg_fixup_cmake_targets(CONFIG_PATH lib/cmake/boost_url)
vcpkg_copy_pdbs()

file(REMOVE_RECURSE "${CURRENT_PACKAGES_DIR}/debug/include")

file(INSTALL ${SOURCE_PATH}/LICENSE_1_0.txt
  DESTINATION ${CURRENT_PACKAGES_DIR}/share/${PORT}
  RENAME copyright)
